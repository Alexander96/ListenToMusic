.container
    .well
        .row
            .col-md-6
                form.form-horizontal(name="formPlaylist" id="formAddPlaylist")
                    legend Create new playlist
                    .form-group
                        label.col-md-2(for="title") Title
                        .col-md-10
                            input.form-control(type="text" id="title" required="required" placeholder="Title" ng-model="playlist.title")
                    .form-group
                        label.col-md-2(for="cover") Cover
                        .col-md-10
                            input.form-control(type="url" id="cover" required="required" placeholder="Cover Url" ng-model="playlist.cover")
                    .form-group
                        label.col-md-2(for="videoTitle") Video title
                        .col-md-10
                            input.form-control.videoTitle(type="text" required="required" placeholder="Video title" ng-model="text")
                    .form-group
                        label.col-md-2(for="videoUrl") Video Url
                        .col-md-10
                            input.form-control.videoUrl(type="url" required="required" placeholder="Video Url" ng-model="url")
                .form-group.pull-right
                    button.btn.btn-warning(ng-click="addVideoInput()") Add More Video
                .row
                    .col-md-12
                        .pull-right
                            button.btn.btn-primary(ng-disabled="formPlaylist.$invalid" ng-click="createPlaylist(playlist)") Create
                            a.btn.btn-primary(href="#/") Cancel